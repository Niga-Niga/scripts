getgenv().Config = {
    ["Auto Game"] = {
        ["Rarity"] = {
            ["Enable"] = false,
            ["Name Rarity"] = {"Mythic","Secret"},
        },
        ["Name"] = {
            ["Enable"] = true,
            ["Name Brainrot"] = {"Frigo Camelo","Lucky Block"},
        }
    },
    ["Account Main"] = {"dopro0","Dopro0"},
    ["Max slot"] = 10
}

local Players = game:GetService("Players")
local PathfindingService = game:GetService("PathfindingService")
local lp = Players.LocalPlayer
local char = lp.Character or lp.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")
local Plots = workspace:WaitForChild("Plots")
local CFG = getgenv().Config

local function isMain()
    for _,v in ipairs(CFG["Account Main"]) do
        if lp.Name == v then
            return true
        end
    end
end

if not isMain() then
    lp:Kick("Not main account")
end

local function scanPlot(plot)
    local pods = plot:FindFirstChild("AnimalPodiums")
    if not pods then return 0,0,{} end
    local cur,max,list = 0,0,{}
    for _,s in ipairs(pods:GetChildren()) do
        local n = tonumber(s.Name)
        if n and n > max then max = n end
        local att = s:FindFirstChild("Base")
            and s.Base:FindFirstChild("Spawn")
            and s.Base.Spawn:FindFirstChild("Attachment")
        if att then
            cur += 1
            local oh = att:FindFirstChild("AnimalOverhead")
            local dn = oh and oh:FindFirstChild("DisplayName")
            local rr = oh and oh:FindFirstChild("Rarity")
            local pr = s:FindFirstChildWhichIsA("ProximityPrompt", true)
            if dn and rr and pr then
                list[#list+1] = {
                    Pod = s,
                    Name = dn.Text,
                    Rarity = rr.Text,
                    Prompt = pr
                }
            end
        end
    end
    return cur,max,list
end

local function getMyPlot()
    for _,p in ipairs(Plots:GetChildren()) do
        local yb = p:FindFirstChild("PlotSign")
            and p.PlotSign:FindFirstChild("YourBase")
        if yb and yb.Enabled then
            return p
        end
    end
end

local myPlot = getMyPlot()
if not myPlot then
    lp:Kick("Base not found")
end

local function pathTo(pos)
    local path = PathfindingService:CreatePath()
    path:ComputeAsync(hrp.Position,pos)
    if path.Status ~= Enum.PathStatus.Success then return end
    for _,w in ipairs(path:GetWaypoints()) do
        hrp.CFrame = CFrame.new(w.Position)
        task.wait(0.15)
    end
end

local function backToBase()
    pathTo(myPlot:GetPivot().Position)
end

local function nameMatch(n)
    for _,v in ipairs(CFG["Auto Game"]["Name"]["Name Brainrot"]) do
        if n == v then return true end
    end
end

local function rarityMatch(r)
    for _,v in ipairs(CFG["Auto Game"]["Rarity"]["Name Rarity"]) do
        if r == v then return true end
    end
end

local function findTarget()
    for _,p in ipairs(Plots:GetChildren()) do
        local _,_,list = scanPlot(p)
        for _,info in ipairs(list) do
            if CFG["Auto Game"]["Name"]["Enable"] and nameMatch(info.Name) then
                return info
            end
            if CFG["Auto Game"]["Rarity"]["Enable"] and rarityMatch(info.Rarity) then
                return info
            end
        end
    end
end

while true do
    local cur = scanPlot(myPlot)
    if cur >= CFG["Max slot"] then
        lp:Kick("Max slot")
    end

    local target = findTarget()
    if not target then
        print("No target")
    end

    pathTo(target.Pod:GetPivot().Position)
    task.wait(0.2)
    pcall(function()
        fireproximityprompt(target.Prompt)
    end)
    task.wait(0.4)
    backToBase()
    task.wait(0.6)
end

